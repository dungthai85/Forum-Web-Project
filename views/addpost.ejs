<%- include('header'); -%>


<body>
    <!-- page content -->
    <%- include('navBarAdd'); -%>


    <div class="card">
        <div class="card-header">
            Add new post
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <form action="http://localhost:3000/api/topics/addpost" method="POST">
                    <div class="mb-3">
                        <label for="posttitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="posttitle" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="topicdesc" class="form-label">Description</label>
                        <textarea class="form-control" id="topicdesc" rows="5" name="desc" required></textarea>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-outline-dark" type="submit">Add Post</button>
                    </div>
                </form>
            </blockquote>
        </div>
    </div>
</body>

</html>